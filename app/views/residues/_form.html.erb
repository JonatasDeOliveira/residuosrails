<%= form_for(residue) do |f| %>
  <% if residue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(residue.errors.count, "error") %> prohibited this residue from being saved:</h2>

      <ul>
      <% residue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
  <div class="field res_name">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
<br>
  <div class="field res_kind">
    <%= f.label :kind %>
    <%= f.select :kind, ["Sólido Orgânico","Sólido Inorgânico","Líquido Orgânico","Líquido Inorgânico","Líquido Inflamável","Outros"]%>
  </div>
<br>
  <div class="field res_blend">
    <%= f.label :blend %>
    <%= f.text_field :blend %>
  </div>
<br>
  <div class="field res_onu">
    <%= f.label :onu %>
    <%= f.text_field :onu %>
  </div>
<br>
  <div class="field res_code">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>
<br>
  <div class="field res_lab">
    <%= f.label :laboratory_id %>
    <%= f.collection_select(:laboratory_id, Laboratory.all.order(:name), :id, :name) %>
  </div>
<br>
  <div class="field res_colelection">
    <%if !Collection.all.empty?%>
    <%= f.label :collection_id %>
    <%= f.collection_select(:collection_id, Collection.all.where(created_at: Collection.last.created_at), :id, :id) %>
    <% end %>
  </div>
<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br>