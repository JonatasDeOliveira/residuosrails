<p id="notice"><%= notice %></p>

<h1>Residues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>String</th>
      <th>Lab name</th>
      <th>String</th>
      <th>Weight</th>
      <th>Integer</th>
      <th>Type</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residues.each do |residue| %>
      <tr>
        <td><%= residue.name %></td>
        <td><%= residue.string %></td>
        <td><%= residue.lab_name %></td>
        <td><%= residue.string %></td>
        <td><%= residue.weight %></td>
        <td><%= residue.integer %></td>
        <td><%= residue.type %></td>
        <td><%= residue.string %></td>
        <td><%= link_to 'Show', residue %></td>
        <td><%= link_to 'Edit', edit_residue_path(residue) %></td>
        <td><%= link_to 'Destroy', residue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

