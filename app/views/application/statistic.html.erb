<h1>Estatistica</h1>
<table>
  <thead>
    <tr>
      <th>Resíduos Cadastrados</th>
      <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Peso</th>
          <th>Laboratorio</th>
          <th>Departamento</th>
          <th colspan="3"></th>
        </tr>
    </tr>
  </thead>

  <tbody>
    <% if !Residue.all.empty? %>
      <% Residue.all.each do |residue| %>
        <tr>
          <td><%= residue.name %></td>
          <td><%= residue.kind %></td>
          <td><%= residue.weight %></td>
          <td><%= Laboratory.find(residue.laboratory_id).name%></td>
          <td><%= Department.find(residue.laboratory_id).name %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>Lista vazia</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<body>
  <% if Residue.all.empty? %>
    <form name='form1'>
      <input onclick='input()' type='button' value='Gerar Previsão de Notificação de Coleta' id='button'><br>
      <input onclick='input()' type='button' value='Gerar Total de Resíduos Acumulados por Tipo' id='button'><br>
      <textarea name='area' rows="1" cols="50">
      </textarea>
    </form>
  <% else %>
    <%= button_to 'Gerar Previsão de Notificação de Coleta', 'generate_types', method: :post %>
    <%= button_to 'Gerar Total de Resíduos Acumulados por Tipo', 'generate_types', method: :post %>
  <% end %>
  
</body>
<script>
function input(){
    var text = "Não existe resíduos cadastrados";
    document.forms.form1.area.value = text;
}    
</script>

