<p id="notice"><%= notice %></p>
<div class = "title">
<h1>Reports</h1>
</end>
<div class = "table_style">
<table>
  <thead>
    <tr>
  
      <th>Gerador por:</th>
      <th>Data inicial:</th>
      <th>Data final:</th>

    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>
          <% if report.generate_by == 1%>Departamento<%end%>
          <% if report.generate_by == 2%>Laboratório<%end%>
          <% if report.generate_by == 3%>Resíduo<%end%>
         </td>
        <td><%= report.begin_dt %></td>
        <td><%= report.end_dt %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

